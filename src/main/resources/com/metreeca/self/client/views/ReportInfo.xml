<form xmlns="http://www.w3.org/1999/xhtml">
	<table>

		<tbody>

			<tr>
				<td>Report</td>
				<td>
					<input class='label' type="text" placeholder='name' pattern='.*\S.*'/>
				</td>
			</tr>

			<tr>
				<td>Endpoint</td>
				<td>
					<input class='endpoint' type="text" placeholder='endpoint' required='required'/>
				</td>
			</tr>

		</tbody>

		<tbody>

			<tr>
				<td>Created</td>
				<td class='created'/>
			</tr>

			<tr>
				<td>Updated</td>
				<td class='updated'/>
			</tr>

		</tbody>

		<tbody>

			<tr>
				<td>Notes</td>
				<td>
					<textarea class='notes'/>
				</td>
			</tr>

		</tbody>

		<caption>
			<button type="reset" class='fa fa-close'/>
			<button type="submit" class='fa fa-check'/>
		</caption>

	</table>
</form>
