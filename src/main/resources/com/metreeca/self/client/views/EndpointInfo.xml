<form xmlns="http://www.w3.org/1999/xhtml" style="min-width: 35rem;">
	<table>

		<tbody>

			<tr>
				<td>Endpoint</td>
				<td>
					<input name="endpoint" type="text" placeholder='endpoint URL' required='required' pattern='\S+'/>
				</td>
			</tr>

			<tr>
				<td>
					<select name="type">
						<option selected="selected" value="collection">Collection</option>
						<option value="resource">Resource</option>
					</select>
				</td>
				<td>
					<input name='entity' type="text" placeholder='entity URL (optional)' pattern='\S+'/>
				</td>
			</tr>

			<tr>
				<td>Label</td>
				<td>
					<input name='label' type="text" placeholder='entity label (optional)'/>
				</td>
			</tr>

		</tbody>

		<caption>
			<button type="reset" class='fa fa-close'/>
			<button type="submit" class='fa fa-check'/>
		</caption>

	</table>
</form>
