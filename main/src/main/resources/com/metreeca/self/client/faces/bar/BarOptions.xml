<form xmlns="http://www.w3.org/1999/xhtml">
	<table>

		<tbody>

			<tr>

				<td>direction</td>

				<td>
					<label>
						<input type="radio" name="orient" value="vertical"/>
						<span>vertical</span>
					</label>
					<br/>
					<label>
						<input type="radio" name="orient" value="horizontal"/>
						<span>horizontal</span>
					</label>
				</td>

			</tr>

			<tr>

				<td>layout</td>

				<td>
					<label>
						<input type="radio" name="layout" value="grouped"/>
						<span>grouped</span>
					</label>
					<br/>
					<label>
						<input type="radio" name="layout" value="stacked"/>
						<span>stacked</span>
					</label>
				</td>

			</tr>

		</tbody>

		<tbody>

			<tr>

				<td>main axis</td>

				<td>
					<label>
						<input type="checkbox" name="main.grid" value="true"/>
						<span>grid</span>
					</label>
				</td>

			</tr>

		</tbody>

	</table>
</form>
